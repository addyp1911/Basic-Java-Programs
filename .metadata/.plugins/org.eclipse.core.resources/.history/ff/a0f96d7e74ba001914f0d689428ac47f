package practice;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.Scanner;
import java.util.StringTokenizer;

public class MyList 
{
public class Node
{
	int data;
	Node next;
	public Node(int data) 
	{
		this.data=data;
	}
}
	Node head;
	
	public boolean addFirst(String s)
	{     int num=Integer.parseInt(s);
		Node n= new Node(num);
		if(head==null)
		{
			head=n;
			return true;
		}
		else
		{
			n.next=head;
			head=n;
		}
		return true;
	
	}
	public void sort(Node head) 
	{
		Node t=head;
		Node index=null;
		if(head==null)
		{
			return;
	    }
		else 
		{
			while(t!=null) 
			{
				index = t.next;
	
		while(index!=null)
		{
			if(t.data>index.data) 
			{
				int p=t.data;
				t.data=index.data;
				index.data=p;
				
			}
			index =index.next;
		}
			t=t.next;
			
			}	
			
		}
	}
		
		public void print() 
		{ 
			Node t=head;
			while(t!=null) 
			{
		    System.out.print(t.data + " ");
		     t=t.next;
		    }
			System.out.println();
		}
		
		public static boolean isNumeric(char charAt) 
		{
			    int val=0;
			    return (val >= 48 && val <=57);
			
		}


	public static void main(String[] args) throws FileNotFoundException 
	{  MyList ml= new MyList();
	     BufferedReader br= new BufferedReader(new FileReader("/home/admin1/Documents/Sample.txt"));
	     try {
			String st=br.readLine();
			while(st!=null) {
				StringTokenizer stn= new StringTokenizer(st);
				String s=stn.nextToken();
				ml.addFirst(s);
			}
			
			
			
		} catch (IOException e) {
			
			e.printStackTrace();
		}
	
	System.out.println("\nProgram terminated Safely...");

	
	System.out.println("the sorted list is");
		ml.sort(ml.head);
		   ml.print();

}
}

